    <div class="container-fluid" style="display: flex; align-items: center; padding: 2px 30px;">
      <div class="logo">
        <a href="/">
          <img src="https://www.outsourceglobal.com/logo.png" alt="Your Company Logo" style="width: 100px;">
        </a>
      </div>
      <div class="main-content__page-tittttle" style="display: flex; align-items: center; justify-content: center;">
        <h2 style="margin: 0; text-align: center; font-size: 20px; font-weight: normal;">Global DeskScape</h2>
      </div>
    </div>
    
  </nav>

</div>
<%= render "icons" %>


  <div class="app-container">
  <%= render "navigation" -%>

    <main class="main-content">
      <%= render "flashes" -%>
      <%= yield %>
    </main>
  </div>

  <%= render "javascript" %>
</body>
</html>


