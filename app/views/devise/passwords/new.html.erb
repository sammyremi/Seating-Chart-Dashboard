<body style="margin: 0; padding: 0;">
    <div style="background-image: url('<%= asset_path('bg1.svg') %>'); background-size: cover; background-position: center; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;"></div>

</body>

<div>
  <p><%= link_to "Back to Dashboard", root_path, class: "text-blue-500 pl-4" %></p>
</div>

<div class="pt-40">
<img src="<%= asset_path('oglogo.png') %>" class=" max-w-xs mx-auto ">
</div>


<div>
  <h3 class="text-center p-5" style="color: #00AEEF; font-size: 33px;">Forgot your password?</h3>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex justify-center items-center pb-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "p-1 border-2 pl-2 border-blue-300 rounded-full focus:outline-none", style: "width: 350px;"%>
  </div>


  <div class="flex justify-center items-center">
    <%= f.submit "Send me reset password instructions", class: "px-4 py-2 bg-blue-400 text-white rounded-full hover:bg-blue-500", style: "width: 350px; cursor: pointer;"%>
  </div>
<% end %>

<div class="flex justify-center items-center p-2" style="color: #00AEEF;">
  <%= link_to "Login", new_user_session_path %>
</div>
